<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppSubTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="heading_large">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#55FF3F</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="heading">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="semibold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="subHeading">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="price">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_blue_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="AppComonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--Sign Up-->
    <style name="TilSignUp" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="colorAccent">@color/black</item>
        <!--<item name="android:layout_marginTop">@dimen/_6sdp</item>

        <item name="android:textColorHint">@android:color/holo_blue_dark</item>
        <item name="colorControlNormal">@android:color/holo_purple</item>
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <item name="colorControlHighlight">@android:color/holo_orange_dark</item>-->
    </style>

    <style name="EdtSignUp">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="passwordEdtInputLayout">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppMaterialButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BusinessDetailTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
    </style>

    <style name="CommonButton">
        <item name="android:background">@drawable/bg_white_updates</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBarNew">
        <item name="android:textColor">#000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlHighlight">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#6200ea</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>
    <style name="advPopupTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <!--////////////////////Tabs style///////////////////////////////////-->

    <style name="tab_bump" parent="Theme.AppCompat">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="tabs" parent="Theme.AppCompat">
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="tab_text" parent="Theme.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tab_container" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--////////////////////Tabs style///////////////////////////////////-->

    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
