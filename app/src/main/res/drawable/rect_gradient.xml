<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="14"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <gradient
                    android:angle="135"
                    android:endColor="#ff9beeff"
                    android:startColor="#ffeaffe0"
                    android:type="linear"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>