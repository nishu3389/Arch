    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8F8F8" />
            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>
</layer-list>

