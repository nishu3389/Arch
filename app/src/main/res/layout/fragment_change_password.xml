<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickHandler"
            type="com.raykellyfitness.ui.changepassword.ChangePasswordFragment.ClickHandler" />

        <variable
            name="viewModel"
            type="com.raykellyfitness.ui.changepassword.ChangePasswordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_background"
        tools:context="com.raykellyfitness.ui.changepassword.ChangePasswordFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.raykellyfitness.views.CommonTextViewSemiBold
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/change_password"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <com.raykellyfitness.views.CommonTextViewSemiBold
                android:text="@string/old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <com.raykellyfitness.views.CommonEditText
                style="@style/passwordEdtInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="14sp"
                android:text="@={viewModel.requestChangePassword.OldPassword}"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"

                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />


            <com.raykellyfitness.views.CommonTextViewSemiBold
                android:text="@string/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <com.raykellyfitness.views.CommonEditText
                style="@style/passwordEdtInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"

                android:textSize="14sp"
                android:text="@={viewModel.requestChangePassword.newPassword}"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"

                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <com.raykellyfitness.views.CommonTextViewSemiBold
                android:text="@string/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <com.raykellyfitness.views.CommonEditText
                style="@style/passwordEdtInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="20"

                android:textSize="14sp"
                android:text="@={viewModel.requestChangePassword.confirmPassword}"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"

                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />


            <TextView
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/common_button"
                android:gravity="center"
                android:onClick="@{() -> clickHandler.onClickSubmit()}"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"

                app:layout_constraintTop_toBottomOf="@+id/tilConfirmPassword" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>