<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.raykellyfitness.model.request.ResponseAddBloodSugarItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_10sdp"
        tool:background="@drawable/gradiat_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.raykellyfitness.views.CommonTextViewMedium
            android:id="@+id/tv_date"
            android:textSize="@dimen/_11sdp"
            android:text=""
            tool:text="11 Sep, 2020"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.raykellyfitness.views.CommonTextView
            android:id="@+id/tv_title_weight"
            android:text="@string/fasting"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:layout_height="wrap_content"/>

        <com.raykellyfitness.views.CommonTextView
            android:id="@+id/tv_title_height"
            android:text="@string/post_fasting"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintLeft_toRightOf="@id/tv_title_weight"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:layout_height="wrap_content"/>


        <com.raykellyfitness.views.CommonTextViewMedium
            android:id="@+id/tv_weight"
            android:text="@{model.blood_sugar_fasting+` mmol/L`}"
            tool:text="85"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_title_weight"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.raykellyfitness.views.CommonTextViewMedium
            android:id="@+id/tv_height"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            tool:text="175"
            app:layout_constraintTop_toBottomOf="@id/tv_title_height"
            app:layout_constraintStart_toStartOf="@id/tv_title_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_weight"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
