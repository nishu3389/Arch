<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.three.u.ui.tipsandtricks.tips_detail.TipsDetailViewModel" />

        <variable
            name="clickHandler"
            type="com.three.u.ui.tipsandtricks.tips_detail.TipsDetailFragment.ClickHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/appDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.three.u.views.RoundedView
                    android:id="@+id/cl_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp"
                    app:layout_constraintHeight_percent=".45"
                    app:bottomLeftCornerRadius="@dimen/_25sdp"
                    app:bottomRightCornerRadius="@dimen/_25sdp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <com.rd.PageIndicatorView
                            android:id="@+id/indicator"
                            app:piv_viewPager="@id/view_pager"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@color/white"
                            app:piv_unselectedColor="@color/white"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:piv_animationType="scale"
                            app:piv_dynamicCount="true"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_17sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.three.u.views.RoundedView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_top"
                    android:layout_height="wrap_content">

                    <com.three.u.views.CommonTextViewSemiBold
                        android:id="@+id/tv_week"
                        tools:text="Week 01"
                        android:text="@{viewModel.type + ` ` + viewModel.model.day}"
                        android:textColor="@color/offwhite"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.three.u.views.CommonTextView
                        android:id="@+id/tv_date"
                        android:textColor="@color/offwhite"
                        android:textSize="@dimen/_10sdp"
                        tools:text="Sunday 13 sep. 2020"
                        android:layout_marginTop="@dimen/_1sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.three.u.views.CommonTextViewSemiBold
                        android:id="@+id/tv_title"
                        tools:text="Pumpkin Soup"
                        android:text="@{viewModel.model.title}"
                        android:textColor="@color/offwhite"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:layout_constraintTop_toBottomOf="@id/tv_week"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/tv_desc"
                        tools:text="@string/lorem_large"
                        android:textColor="@color/offwhite"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:autoLink="all"
                        android:textColorLink="@color/off_white"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:onClick="@{()-> clickHandler.back()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back_arrow"
            android:padding="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>